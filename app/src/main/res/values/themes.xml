<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UnitConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_teal</item>
        <item name="colorPrimaryVariant">@color/dark_teal</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/off_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.Red" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/red</item>
    </style>
    <style name="Button.Yellow" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/yellow</item>
    </style>
    <style name="Button.Blue" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/blue</item>
    </style>
    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/green</item>
    </style>
</resources>